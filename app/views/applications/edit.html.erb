<div class="container">
	<div class="page-header">
		<h1>Edit <small>your application details on Blocmetrics</small></h1>
	</div>

		<div class="row">
		<div class="col-md-8">
		
				<%= form_for @application do |f| %>
		
					<div class="form-group">
						<%= f.label :name %>
						<%= f.text_field :name, class: 'form-control', placeholder: "Add your app name here" %>
					</div>

					<div class="form-group">
						<%= f.label :summary %>
						<%= f.text_field :summary, class: 'form-control', placeholder: "Describe your app in a sentence" %>
					</div>

					<div class="form-group">
						<%= f.label :URL %>
						<%= f.text_field :URL, class: 'form-control', placeholder: "Enter the URL of your app here" %>	
					</div>

					<div class="form-group">
						<%= f.submit "Update", class: 'btn btn-success' %>
					</div>

				<% end %>

		</div>
	</div>


</div>